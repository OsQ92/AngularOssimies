#container {
  position: relative;
  margin: auto;
  width: 60%;
  min-height: 100vh;
}
#container:after {
  content: "";
  display: block;
}
#navigation ul {
  float: left;
  list-style: none;
  padding: 0;
  border-style: solid;
  border-width: 1px;
  display: flex;
}
#navigation li {
  background-color: #F1F1F1;
  padding: 15px 20px;
  text-align: center;
}

#navigation a {
  text-decoration: none;
  color: #000000;
}

#navigation li:hover {
  background-color: #AFAFAF;
}
#footer, #container:after {
  height: 20px;
}
#footer {
  align: center;
  border-style: solid;
  border-width: 1px;
  position: absolute;
  width: 100%;
  bottom: 0;
  text-align: center;
  background-color: #FFF0F0;
  clear: both;
}

#content-wrap {
  padding-bottom: 10px;    /* Footer height */
  padding-top: 20px;
}
